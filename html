  paymentForm.addEventListener('submit', (e) => {
    e.preventDefault();
    paymentMessage.style.display = 'none';

    const amount = parseFloat(paymentForm.paymentAmount.value);
    const method = paymentForm.paymentMethod.value;

    if(isNaN(amount) || amount <= 0) {
      showMessage(paymentMessage, 'Insira um valor válido para o transporte.', 'error');
      return;
    }
    if(method === '') {
      showMessage(paymentMessage, 'Selecione um método de pagamento.', 'error');
      return;
    }

    // Simulação sucesso pagamento
    showMessage(paymentMessage, 'Pagamento confirmado! Seu prêmio será entregue em até 24 horas.', 'success');
    paymentForm.reset();
  });

  function showMessage(element, message, type) {
    element.textContent = message;
    element.className = 'message ' + (type === 'success' ? 'success' : 'error');
    element.style.display = 'block';
  }

  function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email.toLowerCase());
  }
</script>

</body>
